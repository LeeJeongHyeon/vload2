<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/qa_rl"
        android:layout_width="match_parent"
        android:minHeight="67dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="user****"
            android:textColor="@color/black_three"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:textSize="9dp"
            android:id="@+id/qa_q_author"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/baseline1"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@id/qa_q_author"
            android:text="|"
            android:layout_toEndOf="@id/qa_q_author"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qa_q_date"
            android:layout_toEndOf="@id/baseline1"
            android:text="2018.10.20"
            android:layout_alignBaseline="@id/baseline1"
            android:textColor="@color/black_three"
            android:textSize="9dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baseline1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:text="비밀글입니다."
            android:textSize="10dp"
            android:fontFamily="@font/nanumsquareb"
            android:drawableStart="@drawable/qa_secret_icon"
            android:drawablePadding="10dp"
            android:id="@+id/qa_q_text"/>
        <TextView
            android:id="@+id/qa_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/qa_q_text"
            android:textSize="9dp"
            android:textColor="@color/black_two"
            android:drawableEnd="@drawable/review_item_expanded"
            android:drawablePadding="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="6dp"
            android:text="답변보기"/>
    </RelativeLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/qa_a_expl"
        android:layout_width="match_parent"
        android:background="@color/pinkish_grey_two"
        app:el_expanded="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="판매자"
                android:textColor="@color/black_three"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:textSize="9dp"
                android:id="@+id/qa_a_author"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baseline2"
                android:layout_alignParentTop="true"
                android:layout_alignBaseline="@id/qa_a_author"
                android:text="|"
                android:layout_toEndOf="@id/qa_a_author"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qa_a_date"
                android:layout_toEndOf="@id/baseline2"
                android:text="2018.10.20"
                android:layout_alignBaseline="@id/baseline2"
                android:textColor="@color/black_three"
                android:textSize="9dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baseline2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="11dp"
                android:text="비밀답변입니다."
                android:textSize="10dp"
                android:fontFamily="@font/nanumsquareb"
                android:drawableStart="@drawable/qa_secret_icon"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/qa_a_text"/>
        </RelativeLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>