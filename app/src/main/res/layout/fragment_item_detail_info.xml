<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/item_detail_zoomin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rect_blue_border"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/item_detail_zoom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/item_detail_zoom_icon"
            android:fontFamily="@font/nanumsquareb"/>
    </RelativeLayout>
    <util.ZoomImageView
        android:layout_below="@id/item_detail_zoomin"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:id="@+id/item_detail_image"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_image3"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
</RelativeLayout>