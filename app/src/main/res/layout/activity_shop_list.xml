<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_drawaer_view"
    tools:context=".shoplist.ShopListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_three">

        <RelativeLayout
            android:id="@+id/shop_top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@color/denim_blue">
            <ImageView
                android:id="@+id/shop_top_nav"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:src="@drawable/vroad_shop_menu"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:paddingStart="6dp"
                android:paddingEnd="20dp"/>
            <TextView
                android:id="@+id/shop_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="21dp"
                android:layout_toRightOf="@id/shop_top_nav"
                android:textColor="@color/white"
                android:fontFamily="@font/bmjua"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/vroad_shop_heart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/shop_top_heart"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/vroad_shop_search"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/shop_top_heart"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:id="@+id/shop_top_search"
                />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/shop_category_ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/shop_top_toolbar"
            android:weightSum="6"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shop_cat_list"
                android:background="@color/white"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        
        <View
            android:id="@+id/baseline1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_two"
            android:layout_below="@id/shop_category_ll"/>
        
        <RelativeLayout
            android:id="@+id/shop_subcat_rl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_below="@id/baseline1"
            >
            <util.customview.CheckImageView
                android:id="@+id/shop_album_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="11dp"
                android:paddingStart="12dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_two"
                android:layout_toLeftOf="@id/shop_album_btn"
                android:id="@+id/baseline2"/>

            <util.customview.CheckImageView
                android:id="@+id/shop_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/baseline2"
                android:layout_centerVertical="true"
                android:paddingEnd="11dp"
                android:paddingStart="12dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_two"
                android:layout_toLeftOf="@id/shop_list_btn"
                android:id="@+id/baseline3"/>

            <android.support.design.widget.TabLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/baseline3"
                android:layout_alignParentStart="true"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/denim_blue"
                app:tabIndicatorColor="@color/denim_blue"
                android:paddingStart="5dp"
                android:id="@+id/shop_subcat_tl">

            </android.support.design.widget.TabLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_two"
            android:layout_below="@id/shop_subcat_rl"
            android:id="@+id/baseline4"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/baseline4"
            android:id="@+id/shop_list_recyclerview"
            android:background="@color/white_three"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_marginTop="17dp">
            
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_main" />


</android.support.v4.widget.DrawerLayout>