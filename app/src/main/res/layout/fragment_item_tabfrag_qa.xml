<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".shoplist.tab_fragments.Item_Tabfrag_QA">
    <RelativeLayout
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:id="@+id/item_qa_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rect_blue_border" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="상품 문의하기"
            android:textSize="13dp"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="@color/denim_blue"
            android:drawableStart="@drawable/qa_question_icon"
            android:drawablePadding="5dp"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black"
        app:tabBackground="@drawable/qa_tab_selector"
        app:tabIndicatorColor="@color/denim_blue"
        android:layout_height="45dp">
        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="전체(0)"/>
        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="내 문의(0)"/>
    </android.support.design.widget.TabLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:id="@+id/qa_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
</LinearLayout>