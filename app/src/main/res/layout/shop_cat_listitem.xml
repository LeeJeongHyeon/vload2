<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="62dp"
    android:layout_height="56dp">

        <ImageView
            android:id="@+id/shop_cat_indi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_blue_indicator"
            android:visibility="gone"
            android:layout_marginTop="5dp"/>
        <ImageView
            style="@style/shop_cat_btn_img"
            android:id="@+id/shop_cat_allimg"/>
        <TextView
            style="@style/shop_cat_btn_text"
            android:layout_below="@id/shop_cat_allimg"
            android:id="@+id/shop_cat_tv"
            android:text="전체 카테고리"
            />


</RelativeLayout>